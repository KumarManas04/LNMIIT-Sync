<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navBarColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="login_button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#cfd8dc</item>
        <item name="android:textSize">22sp</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="toggleButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:onClick">setAsSelected</item>
        <item name="android:textColor">#3c4043</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:button">@null</item>
    </style>

</resources>
