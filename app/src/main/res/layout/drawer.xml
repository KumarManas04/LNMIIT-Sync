<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background_gradient"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="40dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_image_view_background"
                android:elevation="4dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/alt_profile_photo_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:elevation="4dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="32sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#fff"
            tools:text="Kumar Manas" />

        <TextView
            android:id="@+id/roll_no_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#fff"
            tools:text="17ucs081" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sidebar_button"
                android:drawableStart="@drawable/nav_settings_image"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif"
                android:onClick="settings"
                android:paddingStart="10dp"
                android:paddingTop="14dp"
                android:paddingEnd="10dp"
                android:paddingBottom="14dp"
                android:text="Settings"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#3c4043"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sidebar_button"
                android:drawableStart="@drawable/nav_help_image"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif"
                android:onClick="helpFeedback"
                android:paddingStart="10dp"
                android:paddingTop="14dp"
                android:paddingEnd="10dp"
                android:paddingBottom="14dp"
                android:text="Help &amp; feedback"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#3c4043"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#bdbdbd" />

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sidebar_button"
                android:drawableStart="@drawable/nav_developer_image"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif"
                android:onClick="developers"
                android:paddingStart="10dp"
                android:paddingTop="14dp"
                android:paddingEnd="10dp"
                android:paddingBottom="14dp"
                android:text="Developers"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#3c4043"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sidebar_button"
                android:drawableStart="@drawable/nav_logout_image"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif"
                android:onClick="logout"
                android:paddingStart="10dp"
                android:paddingTop="14dp"
                android:paddingEnd="10dp"
                android:paddingBottom="14dp"
                android:text="Logout"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#3c4043"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>